@model IEnumerable<Product_CQRS.Models.Product>

<form asp-action="UpdatePost" method="POST">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @for (int counter = 0; counter < Model.Count(); counter++)
            {
                <tr>
                    <td>@Html.HiddenFor(product => product.ToList()[counter].ProductId, new { @readonly = "true" })</td>
                    <td>@Html.TextBoxFor(product => product.ToList()[counter].ProductName, new { @readonly = "true" })</td>
                    <td>@Html.TextBoxFor(product => product.ToList()[counter].ProductPrice, new { @readonly = "true" })</td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" class="btn btn-info w-25" value="Buy" />
    <a asp-action="Index" asp-controller="Order" class="btn btn-primary w-25">Check All Orders</a>
</form>

